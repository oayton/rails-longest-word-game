<div class="container">
  <h1>New Game</h1>
  <!-- <p>Find me in app/views/games/new.html.erb</p> -->

  <div class="letters">
    <% @letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>

  <h3>What's the longest word you can find?</h3>
  <div class="box" style="padding: 8px">
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters%>
      <input type="text" name="answer" placeholder="Insert Word">
      <input type="submit" value="Play">
    </form>
  </div>

</div>
